<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:res="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/comment_activity_horizontal_margin"
    android:paddingRight="@dimen/comment_activity_horizontal_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/comment_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        res:cardElevation="15dp"
        app:cardCornerRadius="20dp"
        res:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/turquoise">

            <TextView
                android:id="@+id/commenter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comment"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/darkBlue"/>

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>